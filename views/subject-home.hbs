<div class="row">
  <div class="col-6"><h1>Subject</h1></div>
  <div class="col-6 d-flex justify-content-end" >
    <a href="/subject/addsubject" type="button" class="btn btn-primary align-self-center">+ Add Subject</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Subject ID</th>
      <th scope="col">Subject Name</th>
      <th scope="col">Department</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.subject_id}}</th>
      <td>{{this.subject_name}}</td>
      <td>{{this.department}}</td>
      <td class="text-end">
          {{!-- <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a> --}}
          <a href="subject/editsubject/{{this.subject_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
          <a href="subject/{{this.subject_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>