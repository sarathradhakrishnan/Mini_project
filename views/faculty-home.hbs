<div class="row">
  <div class="col-6"><h1>Faculty</h1></div>
  <div class="col-6 d-flex justify-content-end" >
    <a href="/faculty/addfaculty" type="button" class="btn btn-primary align-self-center">+ Add Faculty</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Faculty ID</th>
      <th scope="col">Faculty Name</th>
      <th scope="col">Subject</th>
      <th scope="col">Email</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.fid}}</th>
      <td>{{this.name}}</td>
      <td>{{this.subject}}</td>
      <td>{{this.email}}</td>
      <td class="text-end">
          {{!-- <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a> --}}
          <a href="faculty/editfaculty/{{this.fid}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
          <a href="faculty/{{this.fid}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>