<div class="row">
  <div class="col-6"><h1>Attendance</h1></div>
  <div class="col-6 d-flex justify-content-end" >
    <a href="/attendance/addattendance" type="button" class="btn btn-primary align-self-center">+ Add attendance</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Admission Number</th>
      <th scope="col">Attendance Total</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.rollno}}</th>
      <td>{{this.att}}</td>
      <td class="text-end">
          {{!-- <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a> --}}
          <a href="attendance/editattendance/{{this.rollno}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
          <a href="attendance/{{this.rollno}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>